---
const { title = "Md Istiak Morsalin", description = "Personal website of Md Istiak Morsalin — Senior Software Engineer, MS Researcher, AI Systems Builder." } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="/fonts.css" />
  </head>
  <body class="min-h-screen bg-slate-50">
    <!-- Sticky Header with Glass Effect - Fully Responsive -->
    <header class="sticky top-0 z-50 backdrop-blur-lg bg-white/90 border-b border-slate-200/50 shadow-sm">
      <div class="max-w-6xl mx-auto px-5 sm:px-8">
        <div class="py-3 sm:py-4 flex items-center justify-between gap-4">
          <!-- Logo -->
          <a href="/" class="group flex items-center gap-2 flex-shrink-0">
            <div class="w-9 h-9 sm:w-10 sm:h-10 rounded-lg bg-gradient-to-br from-brand-700 to-brand-900 flex items-center justify-center text-white font-bold text-base sm:text-lg shadow-md group-hover:shadow-lg transition-shadow">
              IM
            </div>
            <span class="font-bold tracking-tight text-base sm:text-lg text-brand-900 hidden sm:block">Md Istiak Morsalin</span>
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden lg:flex flex-wrap items-center gap-x-6 gap-y-2 text-sm font-medium">
            <a class="hover:text-brand-700 transition-colors relative group" href="/">
              Home
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-700 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="hover:text-brand-700 transition-colors relative group" href="/experience">
              Experience
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-700 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="hover:text-brand-700 transition-colors relative group" href="/research">
              Publications
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-700 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="hover:text-brand-700 transition-colors relative group" href="/projects">
              Projects
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-700 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="hover:text-brand-700 transition-colors relative group" href="/consulting">
              Consulting
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-brand-700 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="inline-flex items-center gap-1.5 px-4 py-2 rounded-lg bg-brand-800 text-white text-sm font-semibold hover:bg-brand-700 transition-colors shadow-sm" href="/contact">
              Contact
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </nav>

          <!-- Mobile Menu Button -->
          <button 
            id="mobile-menu-button"
            class="lg:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors"
            aria-label="Toggle menu">
            <svg class="w-6 h-6 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <nav id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-slate-200 mt-2 pt-4">
          <div class="flex flex-col gap-3">
            <a class="px-4 py-2.5 rounded-lg hover:bg-brand-50 font-medium text-slate-900 hover:text-brand-700 transition-colors" href="/">
              Home
            </a>
            <a class="px-4 py-2.5 rounded-lg hover:bg-brand-50 font-medium text-slate-900 hover:text-brand-700 transition-colors" href="/experience">
              Experience
            </a>
            <a class="px-4 py-2.5 rounded-lg hover:bg-brand-50 font-medium text-slate-900 hover:text-brand-700 transition-colors" href="/research">
              Publications
            </a>
            <a class="px-4 py-2.5 rounded-lg hover:bg-brand-50 font-medium text-slate-900 hover:text-brand-700 transition-colors" href="/projects">
              Projects
            </a>
            <a class="px-4 py-2.5 rounded-lg hover:bg-brand-50 font-medium text-slate-900 hover:text-brand-700 transition-colors" href="/consulting">
              Consulting
            </a>
            <a class="px-4 py-2.5 rounded-lg bg-brand-800 text-white font-semibold hover:bg-brand-700 transition-colors text-center" href="/contact">
              Contact
            </a>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content Area -->
    <div class="max-w-6xl mx-auto px-5 sm:px-8">
      <main class="py-6 sm:py-8">
        <slot />
      </main>

      <!-- Enhanced Footer - Responsive -->
      <footer class="py-8 sm:py-12 mt-12 sm:mt-16 border-t border-slate-200">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-6 sm:mb-8">
          <!-- About Column -->
          <div class="space-y-3">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-brand-700 to-brand-900 flex items-center justify-center text-white font-bold shadow flex-shrink-0">
                IM
              </div>
              <span class="font-bold text-slate-900 text-sm sm:text-base">Md Istiak Morsalin</span>
            </div>
            <p class="text-xs sm:text-sm text-slate-600 leading-relaxed">
              Senior Software Engineer, MS Researcher, and AI Systems Builder based in Atlanta, GA.
            </p>
          </div>

          <!-- Quick Links Column -->
          <div>
            <h4 class="font-semibold text-slate-900 mb-3 text-sm sm:text-base">Quick Links</h4>
            <ul class="space-y-2 text-xs sm:text-sm">
              <li><a class="text-slate-600 hover:text-brand-700 transition-colors" href="/">Home</a></li>
              <li><a class="text-slate-600 hover:text-brand-700 transition-colors" href="/experience">Experience</a></li>
              <li><a class="text-slate-600 hover:text-brand-700 transition-colors" href="/research">Publications</a></li>
              <li><a class="text-slate-600 hover:text-brand-700 transition-colors" href="/projects">Projects</a></li>
              <li><a class="text-slate-600 hover:text-brand-700 transition-colors" href="/consulting">Consulting</a></li>
            </ul>
          </div>

          <!-- Connect Column -->
          <div class="sm:col-span-2 lg:col-span-1">
            <h4 class="font-semibold text-slate-900 mb-3 text-sm sm:text-base">Connect</h4>
            <div class="flex gap-2 sm:gap-3 mb-4 flex-wrap">
              <a class="p-2 rounded-lg bg-slate-100 hover:bg-brand-100 text-slate-700 hover:text-brand-700 transition-colors" 
                 href="https://github.com/Istiakmorsalin" target="_blank" rel="noreferrer" aria-label="GitHub">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.430.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a class="p-2 rounded-lg bg-slate-100 hover:bg-brand-100 text-slate-700 hover:text-brand-700 transition-colors" 
                 href="https://www.linkedin.com/in/istiakmorsalin/" target="_blank" rel="noreferrer" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a class="p-2 rounded-lg bg-slate-100 hover:bg-brand-100 text-slate-700 hover:text-brand-700 transition-colors" 
                 href="https://scholar.google.com/citations?hl=en&user=_g89MBgAAAAJ" target="_blank" rel="noreferrer" aria-label="Google Scholar">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5z"/>
                </svg>
              </a>
            </div>
            <a class="text-xs sm:text-sm text-slate-600 hover:text-brand-700 transition-colors font-medium flex items-center gap-2 break-all" href="mailto:anik.cse@gmail.com">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>anik.cse@gmail.com</span>
            </a>
          </div>
        </div>

        <!-- Bottom Footer -->
        <div class="pt-4 sm:pt-6 border-t border-slate-200 flex flex-col sm:flex-row sm:items-center justify-between gap-3 text-xs sm:text-sm text-slate-600">
          <div>© {new Date().getFullYear()} Md Istiak Morsalin. All rights reserved.</div>
          <div class="flex items-center gap-2 sm:gap-4 flex-wrap">
            <span class="hidden sm:inline">Built with Astro + Tailwind</span>
            <span class="text-slate-400 hidden sm:inline">·</span>
            <a class="hover:text-brand-700 transition-colors" href="/privacy">Privacy</a>
          </div>
        </div>
      </footer>
    </div>

    <!-- Mobile Menu Toggle Script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = menuButton?.querySelector('.menu-icon');
        const closeIcon = menuButton?.querySelector('.close-icon');

        menuButton?.addEventListener('click', () => {
          const isOpen = !mobileMenu?.classList.contains('hidden');
          
          if (isOpen) {
            mobileMenu?.classList.add('hidden');
            menuIcon?.classList.remove('hidden');
            closeIcon?.classList.add('hidden');
          } else {
            mobileMenu?.classList.remove('hidden');
            menuIcon?.classList.add('hidden');
            closeIcon?.classList.remove('hidden');
          }
        });

        // Close menu when clicking a link
        mobileMenu?.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', () => {
            mobileMenu?.classList.add('hidden');
            menuIcon?.classList.remove('hidden');
            closeIcon?.classList.add('hidden');
          });
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Ensure touch targets are accessible on mobile */
  @media (max-width: 1024px) {
    button, a {
      min-height: 44px;
    }
  }
</style>